<!DOCTYPE html>
<%- include ./general/header %>
<%- include ./general/navbar %>
<body>
    <% if(message.length>0){ %>
        <div class="alert alert-dismissible alert-warning container mt-3">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <h4>Warning!</h4>
            <p>
                <%= message %>
            </p>
        </div>
        <% } %>
            <div class="container mt-3" id="settingForm">
                <form action="/profile/settings/<%= user._id %>" method="post">
                    <h2>Update Profile</h2>
                    <div class="form-group has-warning">
                        <label for="username">Username</label>
                        <input type="text" id="settingFormUsernameTxt" class="form-control" name="username" placeholder="<%= user.fullname %>" required>
                    </div>
                    <div class="form-group has-warning">
                        <label for="city">City</label>
                        <input type="text" id="settingFormCityTxt" class="form-control" name="city">
                    </div>
                    <div class="form-group has-warning">
                        <label for="state">State</label>
                        <input type="text" id="settingFormStateTxt" class="form-control" name="state">
                    </div>
                    <input type="submit" class="btn btn-primary" value="Upadte Profile">
                </form>
            </div>
            <%- include ./general/scripts %>

            
</body>


