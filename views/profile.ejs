<h2>
    <%= user.fullname %>
</h2>







<div class="container">
    <div id="book" class="mt-4">
        <% if(books.length>0){ %>
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading bg-main-color">
                            <h3 style="color:aquamarine;">Your Book List</h3>
                        </div>
                        <div class="panel-body">
                            <table class="table table-stripped table-hover">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Title</th>
                                        <th>Image</th>
                                        <th>Publisher</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% books.forEach(function(book,i){ %>
                                        <tr>
                                            <td>
                                                <%= i+1 %>
                                            </td>
                                            <td>
                                                <a href="<%= book.link %>" style="text-decoration:none;">
                                                    <%= book.title %>
                                                </a>
                                            </td>
                                            <td>
                                                <img src="<%= book.imageUrl %>" alt="">
                                            </td>
                                            <td>
                                                <%= book.publisher %>
                                            </td>
                                            <td>
                                                <form action="/profile/removeBook/<%= book._id %>" method="POST"></form>


                                                <input type="submit" class="btn btn-primary btn-block" value="Remove">
                                            </td>
                                        </tr>
                                        <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <%} else { %>
                
                
                <h3>Your book list is empty, add some books</h3>
                <% } %>
    </div>
</div>

<a href="/logout">Logout</a>